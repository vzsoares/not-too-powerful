{
  "env": {
    "es2021": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "standard-with-typescript",
    "plugin:promise/recommended",
    "plugin:n/recommended",
    "plugin:import/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["unused-imports", "@typescript-eslint", "log", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/explicit-function-return-type": 0,
    "unused-imports/no-unused-imports": "error",
    "@typescript-eslint/strict-boolean-expressions": 0,
    "@typescript-eslint/dot-notation": 0,
    "@typescript-eslint/no-useless-constructor": 0,
    "n/handle-callback-err": 0,
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": false
      }
    ],
    "n/no-unpublished-import": "off",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "n/no-missing-import": 0,
    "import/no-named-as-default-member": 0,
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          "builtin",
          "external",
          "internal",
          "unknown",
          "parent",
          "sibling",
          "index",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@services/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@models/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@controllers/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@middleware/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@utils/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@routes/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@validations/**",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@startup/**",
            "group": "unknown",
            "position": "after"
          }
        ]
      }
    ]
  }
}
